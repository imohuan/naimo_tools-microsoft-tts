{
  "name": "microsoft-tts",
  "version": "1.0.0",
  "description": "微软语音合成插件 - 使用 Microsoft Edge TTS 将文本转换为语音",
  "type": "module",
  "scripts": {
    "init": "pnpm i && pnpm run add-electron-types && pnpm run dev",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "add-electron-types": "$env:ELECTRON_SKIP_DOWNLOAD=1; pnpm install electron --save-dev",
    "deploy": "node scripts/deploy-to-build.js"
  },
  "keywords": [
    "naimo",
    "plugin",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.13",
    "@types/node": "^22.0.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "electron": "^38.2.2",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2",
    "vite": "^7.1.5"
  },
  "dependencies": {
    "node-edge-tts": "^1.2.8",
    "vue": "^3.5.22",
    "ws": "^8.18.3"
  }
}